@model ForEncryption.Models.DecryptionViewModel

@{
    ViewData["Title"] = "Decrypt";
}


    <div class="row g-4 p-5">
      

        <!-- Decryption Section -->
        <div class="col-md-12">
            <h2 class="card-title text-center">Decrypt Message</h2>
            <br />
            <div class="card">
                <div class="card-body">
                    <form asp-action="Decrypt" method="post">
                        <div class="mb-3">
                            <label for="EncryptedTextInput" class="form-label">Encrypted Message:</label>
                            <textarea id="EncryptedTextInput" name="EncryptedText" class="form-control" rows="4" placeholder="Enter encrypted message">@Model.EncryptedText</textarea>
                        </div>
                        <div class="mb-3">
                        <button type="button" onclick="pasteText('PlainText')" class="btn btn-secondary">
                            <i class="fas fa-paste me-2"></i>Paste
                        </button>
                    </div>
                        <div class="mb-3">
                            <label for="DecryptionKey" class="form-label">Decryption Key:</label>
                            <input type="text" id="DecryptionKey" name="EncryptionKey" value="@Model.EncryptionKey" class="form-control" placeholder="Enter decryption key" />
                        </div>
                        <div class="d-flex justify-content-center align-items-center">

                            <button type="submit" class="btn btn-primary">Decrypt</button>
                        </div>
                    </form>
                    @if (!string.IsNullOrEmpty(Model.DecryptedText))
                    {
                        <div class="mt-3">
                            <label class="form-label">Decrypted Text:</label>
                            <textarea class="form-control" rows="4" readonly>@Model.DecryptedText</textarea>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

@section Scripts {
    <script>

        // Paste text from clipboard
        function pasteText(elementId) {
            navigator.clipboard.readText().then(text => {
                document.getElementById(elementId).value = text;
            });
        }
    </script>
}
