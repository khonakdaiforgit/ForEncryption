@model ForEncryption.Models.EncryptionVIewModel

@{
    ViewData["Title"] = "Encrypt";
}


<div class="row g-4 p-5">
    <!-- Encryption Section -->
    <div class="col-md-12">
        <h2 class="card-title text-center">Encrypt Message</h2>
        <br />
        <div class="card">
            <div class="card-body">
                <form asp-action="Encrypt" method="post">
                    <div class="mb-3">
                        <label for="PlainText" class="form-label">Message to Encrypt:</label>
                        <textarea id="PlainText" name="PlainText" class="form-control" rows="4" placeholder="Enter your message (up to 3 paragraphs)">@Model.PlainText</textarea>
                    </div>
                    <div class="mb-3">
                        <button type="button" onclick="pasteText('PlainText')" class="btn btn-secondary">
                            <i class="fas fa-paste me-2"></i>Paste
                        </button>
                    </div>
                    <div class="mb-3">
                        <label for="EncryptionKey" class="form-label">Encryption Key:</label>
                        <input type="text" id="EncryptionKey" name="EncryptionKey" value="@Model.EncryptionKey" class="form-control" placeholder="Enter encryption key" />
                    </div>
                    <div class="d-flex justify-content-center align-items-center">

                        <button type="submit" class="btn btn-primary">Encrypt</button>
                    </div>
                </form>
                @if (!string.IsNullOrEmpty(Model.EncryptedText))
                {
                    <div class="mt-3">
                        <label class="form-label">Encrypted Text:</label>
                        <textarea id="EncryptedText" class="form-control" rows="4" readonly>@Model.EncryptedText</textarea>
                        <div class="d-flex justify-content-center align-items-center">
                            <button type="button" onclick="copyText('EncryptedText')" class="btn btn-success mt-2">
                                <i class="fas fa-copy me-2"></i>Copy Encrypted Text
                            </button>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}


@section Scripts {
    <script>
        // Copy text to clipboard
        function copyText(elementId) {
            var text = document.getElementById(elementId).value;
            navigator.clipboard.writeText(text).then(() => {
                alert('Text copied to clipboard!');
            });
        }

        // Paste text from clipboard
        function pasteText(elementId) {
            navigator.clipboard.readText().then(text => {
                document.getElementById(elementId).value = text;
            });
        }
    </script>
}
